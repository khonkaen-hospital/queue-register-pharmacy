{
  "name": "q4u-register",
  "version": "0.4.1",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "ng:serve": "ng serve",
    "start": "electron ./main.js",
    "start-dev": "npm-run-all -p ng:serve electron:serve",
    "build": "npm run electron:serve-tsc && ng build --prod --base-href ./",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "postinstall": "electron-builder install-app-deps",
    "electron:serve-tsc": "tsc -p tsconfig.serve.json",
    "electron:serve": "wait-on tcp:4200 && npm run electron:serve-tsc && npx electron main.js --serve",
    "electron:build": "npm run build:prod && electron-builder build --macos --windows",
    "electron:build-publish": "npm run build:prod && electron-builder build --macos --windows --publish always",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~11.0.1",
    "@angular/common": "~11.0.1",
    "@angular/compiler": "~11.0.1",
    "@angular/core": "~11.0.1",
    "@angular/forms": "~11.0.1",
    "@angular/platform-browser": "~11.0.1",
    "@angular/platform-browser-dynamic": "~11.0.1",
    "@angular/router": "~11.0.1",
    "@auth0/angular-jwt": "^5.0.2",
    "@cds/core": "^5.0.3",
    "@clr/angular": "5.0.3",
    "@clr/icons": "5.0.3",
    "@clr/ui": "5.0.3",
    "@types/escpos": "^2.5.0",
    "@webcomponents/webcomponentsjs": "^2.0.0",
    "escpos": "^2.5.2",
    "escpos-network": "^3.0.0-alpha.5",
    "jwt-decode": "^3.1.2",
    "moment": "^2.29.1",
    "ngx-electron": "^2.2.0",
    "qr-image": "^3.2.0",
    "rxjs": "~6.6.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1100.2",
    "@angular/cli": "~11.0.2",
    "@angular/compiler-cli": "~11.0.1",
    "@types/electron": "^1.6.10",
    "@types/jasmine": "~3.6.0",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "electron": "^11.2.0",
    "electron-builder": "^22.10.5",
    "electron-rebuild": "^2.3.5",
    "electron-reload": "^1.5.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.1.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "protractor": "~7.0.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.0.2",
    "wait-on": "^5.2.1"
  },
  "build": {
    "appId": "com.q4uregister.app",
    "mac": {
      "category": "kkh.app.ez.q4uregister"
    },
    "win": {
      "target": "nsis"
    },
    "directories": {
      "output": "release/"
    },
    "files": [
      "dist/**/*",
      "print.js",
      "main.js",
      "node_modules/**/*",
      "package.json"
    ]
  }
}
